<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true"
	xmlns:tools="http://schemas.android.com/tools">

	<TableLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dip">

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:paddingRight="10dp"
				android:text="@string/columndlg_field_title_label" />

			<EditText
				android:id="@+id/txtTitle"
				android:layout_weight="1"
				android:singleLine="true"
				android:selectAllOnFocus="true"
				android:hint="@string/columndlg_field_title_hint" />

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:paddingRight="10dp"
				android:text="@string/columndlg_field_position_label" />

			<Spinner
				android:id="@+id/spnPosition"
				android:layout_weight="1" />

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:paddingRight="10dp"
				android:text="@string/columndlg_field_resource_label" />

			<Button
				android:id="@+id/btnResource"
				android:layout_weight="1"
				android:textSize="14sp"
				android:maxLines="5" />

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:paddingRight="10dp"
				android:text="@string/columndlg_field_exclude_label" />

			<Button
				android:id="@+id/btnExclude"
				android:layout_weight="1" />

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView
				android:paddingRight="10dp"
				android:text="@string/columndlg_field_refresh_label" />

			<Spinner
				android:id="@+id/spnRefresh"
				android:layout_weight="1" />

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center" >

			<TextView
				android:paddingRight="10dp"
				android:text="@string/columndlg_field_media_label" />

			<Spinner
				android:id="@+id/spnInlineMedia"
				android:layout_width="0px"
				android:layout_weight="1" />

			<CheckBox
				android:id="@+id/chkHdMedia"
				android:layout_width="0px"
				android:layout_weight="1"
				android:text="@string/columndlg_field_hd_label" />

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<CheckBox
				android:id="@+id/chkNotify"
				android:layout_width="0px"
				android:layout_weight="1"
				android:text="@string/columndlg_field_notify_label" />

			<CheckBox
				android:id="@+id/chkDelete"
				android:layout_width="0px"
				android:layout_weight="1"
				android:text="@string/columndlg_btn_delete" />

		</TableRow>

		<TableRow
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/rowNotification"
			android:visibility="gone">

			<TextView
				android:paddingRight="10dp"
				android:text="@string/columndlg_field_notification_label" />

			<Button
				android:id="@+id/btnNotification"
				android:layout_weight="1" />

		</TableRow>

	</TableLayout>

</ScrollView>
