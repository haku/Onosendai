<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fillViewport="true">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:padding="5dip">

		<ToggleButton
			android:id="@+id/chkNotify"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textOff="Do not notify"
			android:textOn="Notify" />

		<CheckBox
			android:id="@+id/chkLights"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/notifstydlg_field_lights" />

		<CheckBox
			android:id="@+id/chkVibrate"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/notifstydlg_field_vibrate" />

		<CheckBox
			android:id="@+id/chkSound"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/notifstydlg_field_sound" />

		<CheckBox
			android:id="@+id/chkExcludeRetweets"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/notifstydlg_field_exclude_retweets" />

		<CheckBox
			android:id="@+id/chkIncludeOwnTweets"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/notifstydlg_field_include_own_tweets" />

	</LinearLayout>

</ScrollView>
